@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-4">
    <h3 class="display-4">Bienvenido</h3>
</div>

<style>
    .color{
        width: 50px;
        height: 50px;
        margin-right: 1rem;
    }
</style>
@model List<Modelo.Color>
    

<div class="row d-flex justify-content-around">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header pt-3">
                <h4 class="text-primary text-uppercase">Seleccione un nivel</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-success btn-block" href="@Url.Action("Jugar", "Home", new { nivel = 1 })">Fácil</a>
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-danger btn-block" href="@Url.Action("Jugar", "Home", new { nivel = 2 })">Difícil</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

              

